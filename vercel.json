{
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "flutter build web --release",
        "outputDirectory": "build/web"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/share/reading/:readingId",
      "destination": "/index.html"
    },
    {
      "source": "/:path((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}